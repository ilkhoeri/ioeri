{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/modules/*": ["./resource/docs/*"],
      "@/*": ["./*"],
      "#/*": ["./library/*"]
    },
    "typeRoots": ["resource/docs/*", "./node_modules/@types"]
  },
  "include": [
    "./src",
    "./types",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.md",
    "**/*.mdx",
    ".next/types/**/*.ts",
    "resource/docs/hooks",
    "resource/docs/utility",
    "resource/docs/components/native",
    "resource/docs/components/web",
    "resource/docs/ondevelopment/utils",
    "resource/docs/ondevelopment/factory",
    "resource/docs/icons"
  ],
  "exclude": ["node_modules"]
}
